border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

$font = Helvetica
$grey = #333
$greyLight = #999

.yacp-colorSelector
  position: relative
  width: 70px
  height: 24px
  margin: 20px auto
  padding: 0 0 0 25px
  border: 1px solid $greyLight
  span
    position: absolute
    top: 2px
    left: 2px
    width: 20px
    height: 20px
    background-color: transparent
  input
    width: 100%
    height: 24px
    padding: 0
    border: none
    font: bold 16px/24px $font
    color: $grey
    &:focus
      outline: none

.yacp-container
  display: block
  margin: 0 auto
  width: 203px
  background: #fff
  box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3)
  border-radius(5px)
  ul
    margin: 0
    padding: 5px 5px 5px 6px
    li
      display: inline-block
      margin: 2px
      padding: 0
  a.yacp-color
    display: block
    width: 18px
    height: 18px
    border: 1px solid $greyLight
    &:hover
      box-shadow: 1px 1px 0 rgba(0, 0, 0, 0.2)

.yacp-custom
  display: block
  font: bold 12px/20px $font
  color: $grey
  text-decoration: none
  text-align: center
  &:hover
    text-decoration: underline

.yacp-minicolors
  padding: 10px 14px
  .minicolors
    .minicolors-swatch-color
      top: 1px
      left: 1px
      width: 28px
      height: 18px
    .minicolors-panel
      position: relative
      margin: 10px 0
  .yacp-confirm
    display: block
    font: bold 12px/20px $font
    color: $grey
    text-decoration: none
    text-align: center
    &:hover
      text-decoration: underline

@require "node_modules/jquery-minicolors/jquery.minicolors.css"
